/* components/search/head/head.wxss */
.nav{
  display: flex;
  padding: 8px 0;
}
.nav-l{
  flex: 1;
  position: relative;
  overflow: hidden;
  height: 30px;
  border-radius: 30px;
  background: #eff1f4;
}
input{
  width: 100%;
  height: 100%;
  margin-left: 30px;
  font-size: 14px;
  color: #333;
  line-height: 100%;
}
.nav-r{
  padding: 0 0 0 10px;
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #333;
}
.img{
  position: absolute;
  left: 10px;
  top: 7px;
  width: 16px;
  height: 16px;
}
.box{
  position: absolute;
  background: #fff;
  height: 100%;
  width: 90%;
  top: 46px;
  z-index: 100;
  padding: 0 14px;
}
.list{
  border-bottom: 1px solid #e1e1e1;
  padding: 15px 0;
  display: flex;
  align-items: center;
}
.list-l{
  width: 200px;
  flex: 1;
  display: flex;
}
.list-r{
  margin-left: 5px;
  width: 24px;
  height: 24px;
  border-radius: 50%;
  background: rgba(163,163,172,.2);
  text-align: center;
}
.im{
  margin-right: 10px;
  width: 40px;
  height: 40px;
  border-radius: 3px;
}
.img-r{
  flex: 1;
  color: #a3a3ac;
}
.text1{
  padding-bottom: 4px;
  line-height: 20px;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  font-size: 14px;
  color: #40404c;
}
.text2{
  display: flex;
  align-items: center;
}
.ta{
  margin-right: 15px;
  font-size: 12px;
  color: #a3a3ac;
  border: .5px solid #a3a3ac;
  padding: 0 4.5px;
  line-height: 13px;
}
.ico1{
  width: 12px;
  height: 18px;
  margin-right: 5px;
}
.l1{
  display: flex;
  align-items: center;
  margin-right: 20px;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #a3a3ac;
}
.bf{
  width: 14px;
  height: 14px;
}
.item{
  line-height: 40px;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #40404c;
  border-bottom: 1px solid #e1e1e1;
}