/* components/search/bar/bar.wxss */
.box{
  margin-top: 5px;
  height: 40px;
}
.list{
  width: 100%;
  white-space: nowrap;
  overflow-x: scroll;
  overflow-y: hidden;
  border-bottom: .5px solid #e8e8e8;
  display: flex;
}
.item{
  padding: 7px 12.5px;
  font-size: 14px;
  color: #72727b;
  height: 20px;
  line-height: 20px;
}
.active{
  font-size: 18px;
  border-bottom: 3px solid #f06742;
  color: #40404c;
}