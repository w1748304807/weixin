/* components/index/list/lists.wxss */
.list-w{
  padding-bottom: 20px;
}
.title{
  font-size: 18px;
  color: #40404c;
  line-height: 25px;
  margin: 17px 0 17px 15px;
  font-weight: 700;
}
.list1{
  display: flex;
  margin: 0 15px;
}
.item{
  flex: 1;
  margin: 0px 3px;
}
.item-s{
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  width: 100%;
}
.text{
  padding: 6px 0 11px 0;
  font-family: PingFangSC-Regular;
  font-size: 13px;
  line-height: 18px;
  height: 36px;
  color: #333;
  letter-spacing: .34px;
  position: relative;
}
.out{
  position: relative;
  padding-bottom: 100%;
}
.img1{
  width: 100%;
  height: 100%;
  max-width: 100%;
}
.esp{
  width: 100%;
  height: 100%;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.list2{
  margin: 0 15px;
}
.item2{
  padding: 15px 10px 15px 0;
  display: flex;
}
.item2-l{
  width: 94px;
  height: 94px;
  padding: 0 15px 0 0;
  background-color: #fff;
  border-radius: 10px;
}
.img2{
  width: 100%;
  height: 100%;
}
.item2-r{
  flex: 1;
  overflow: hidden;
  padding-right: 20px;
}
.txt1{
  color: #333;
  font-size: 16px;
  line-height: 1.38;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.txt2{
  margin: 5px 0 7px;
  font-size: 13px;
  line-height: 1.38;
  color: #999;
}
.txt3{
  font-size: 12px;
  line-height: 1.45;
  color: #999;
}
.txt-l{
  min-width: 55px;
  display: flex;
}
.ico1{
  width: 12px;
  height: 18px;
  margin-right: 5px;
}
.l1{
  display: flex;
  align-items: center;
  margin-right: 20px;
}
.list3{
  margin: 0 16px;
}
