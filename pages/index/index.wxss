/**index.wxss**/
.box{
  height: 100%;
}
.head{
  position: fixed;
  top: 0;
  height: 50px;
  width: 100%;
  max-width: 640px;
  cursor: pointer;
  z-index: 999;
  display: flex;
  align-items: center;
}
.head-w{
  padding: 15px 15px 5px 15px;
  display: flex;
  align-items: center;
  width: 100%;
}
.logo{
  width: 70px;
  height: 20px;
  margin-right: 10px;
}
.search{
  flex: 1;
  padding: 8px 0;
  position: relative;
}
.ip{
  overflow: hidden;
  height: 30px;
  font-size: 12px;
  color: #ababab;
  line-height: 16px;
  font-weight: 400;
  border-radius: 30px;
  background: #eff1f4;
  position: relative;
  display: flex;
  align-items: center;
}
.ap{
  width: 68px;
  margin-left: 10px;
  padding-top: 8px;
  padding-bottom: 8px;
  border: 1px solid #f66847;
  border-radius: 15px;
  font-size: 12px;
  color: #f86442;
  text-align: center;
}
.sear{
  width: 16px;
  height: 16px;
  z-index: 100;
  margin-left: 10px;
  margin-right: 10px;
}
.tabbar{
  opacity: 1;
  height: 45px;
  transition: all .2s;
  position: fixed;
  width: 100%;
  max-width: 640px;
  background: #fff;
  cursor: pointer;
  top: 50px;
  z-index: 999;
}