/* pages/top/top.wxss */
.top{
  height: 100%;
}
.head{
  /* position: fixed; */
  top: 0;
  height: 50px;
  width: 100%;
  max-width: 640px;
  cursor: pointer;
  z-index: 999;
  display: flex;
  align-items: center;
  background: #fff;
}
.head-w{
  padding: 15px 15px 5px 15px;
  display: flex;
  align-items: center;
  width: 100%;
}
.logo{
  width: 70px;
  height: 20px;
  margin-right: 10px;
}
.search{
  flex: 1;
  padding: 8px 0;
  /* position: relative; */
}
.ip{
  overflow: hidden;
  height: 30px;
  font-size: 12px;
  color: #ababab;
  line-height: 16px;
  font-weight: 400;
  border-radius: 30px;
  background: #eff1f4;
  /* position: relative; */
  display: flex;
  align-items: center;
}
.ap{
  width: 68px;
  margin-left: 10px;
  padding-top: 5px;
  padding-bottom: 5px;
  border: 1px solid #f66847;
  border-radius: 15px;
  font-size: 12px;
  color: #f86442;
  text-align: center;
}
.sear{
  width: 16px;
  height: 16px;
  z-index: 100;
  margin-left: 10px;
  margin-right: 10px;
}
.tab{
  /* position: fixed; */
  top:50px;
  width:100%;
  height:50px;
  border-bottom: 1px solid #d7d7d7;

}
.scroll-view{
  display: flex;
  width:100%;
  height:50px;
  white-space: nowrap;
  overflow-x: scroll;
  overflow-y: hidden;
  flex-direction:row;
}
.item{
  line-height: 50px;
  font-size: 14px;
  display: block;
  padding: 0px 14px;
  color: #a3a3ac;
}
.item_active{
  line-height: 50px;
  font-size: 18px;
  display: block;
  padding: 0px 14px;
  color: #40404c;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.menu_content{
  display: flex;
  width: 100%;
  height:calc(100% - 100px);
}
.menu_ul{
  height: 100%;
  width: 73px;
  /* background: #ccc; */
  display: flex;
  overflow-y: scroll;
  overflow-x: hidden;
  flex-direction: column;
  
}
.menu_ul_list{
  width:100%;
  height: 50px;
  line-height: 50px;
  text-align: center;
  color: #72727b;
  background: #f3f4f5;
  font-size: 14px;
  border-bottom: 1px #d7d7d7 solid;
}
.menu_ul_list_active {
  width:100%;
  height: 50px;
  line-height: 50px;
  text-align: center;
  color: #72727b;
  background: #fff;
  font-size: 14px;
  border-bottom: 1px #d7d7d7 solid;
  position: relative;
}
.menu_ul_list_active::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 5px;
    height: 50px;
    background-color: #f86442;
}
.menu_list{
  display: felx;
  height: 100%;
  width: calc(100% - 73px);
  overflow-y: scroll;
  overflow-x: hidden;
  flex-direction: column;
}
.menu_list_item{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 104px;
  overflow: hidden;
}
.ranking{
  height: 19px;
  padding:18px 0;
  flex: 0 0 34px;
  font-size: 16px;
  line-height: 19px;
  text-align: center;
  font-weight: 700;
}
.menu_list_item_wrap{
  width:calc(100% - 44px);
  padding: 15px 10px 15px 0;
  height:73px;
  border-bottom:1px solid #eaeaea;
  display: flex;
}
.cover_img{
  width: 70px;
  height:70px;
}
.cover_img_image{
  border-radius: 5px;
  height:100%;
  max-width: 100%
}
.menu_list_item_wrap_content{
  padding:0 10px 0 15px;
  width: calc(100% - 95px)
}
.menu_list_item_wrap_h1{
  width: 100%;
  color: #40404c;
  font-size: 16px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis; 
}
.menu_list_item_wrap_h2{
  width: 100%;
  font-size: 13px;
  color: #999;
  margin: 2px 0 3px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis; 
}
.menu_list_item_wrap_h3{
  width: 100%;
  height: 20px;
  color: #999;
  display: flex;
}
.menu_list_item_wrap_h3 image{
  width: 14px;
  height: 17px;
  padding:0 10px 3px 0; 
}
.menu_list_item_wrap_h3 text{
  font-size: 11px;
  height: 20px;
  line-height: 20px;
  padding-right:15px; 
  display: block;
}